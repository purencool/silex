{% extends 'user_panel/layout.html.twig' %}
{% import "modules/macro.html.twig" as macros %}

{% block content %}
  <section id="todoapp">
    <header id="header">
      <h1>Todos</h1>
      <input id="new-todo" placeholder="What needs to be done?" autofocus>
      <div>
        <a href="user-panel/#/">show all</a> |
        <a href="user-panel/#/pending">show pending</a> |
        <a href="user-panel/#/completed">show completed</a>
      </div>      
    </header>
    <section id="main">
      <ul id="todo-list"></ul>
    </section>
  </section>
  <!-- Templates -->
  <script type="text/template" id="item-template">
    <div class="view">
      <input class="toggle" type="checkbox" <%= completed ? 'checked' : '' %>>
      <label><%- title %></label>
      <input class="edit" value="<%- title %>">
      <button class="destroy">remove</button>
    </div>
  </script>  
{% endblock %}